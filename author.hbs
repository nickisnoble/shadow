{{!< default}} {{! Get the default layout }}

<main role="main">
  
  {{#author}}
  <header class="author-header">
    {{#if image}}
      <img src="{{image}}" alt="{{name}} cover image"/>
    {{/if}}

    <h1>{{name}}</h1>

    {{#if bio}}
      <p class="author-bio">{{bio}}</p>
    {{/if}}

    {{#if website}}
      <p class="author-website">Learn more about {{name}} at {{website}}</p>
    {{/if}}
  </header>
  {{/author}}
  
  <hr>

  {{#foreach posts}}

    <article role="article" class="{{post_class}}">

      <header class="post-header">

        <a href="{{url}}">
          <h1 class="post-title">{{title}}</h1>
        </a>

        <aside class="post-meta">
          {{tags}}
          <p>Written by <a href="{{author.url}}">{{author.name}}</a> on <time class="post-date">{{date format='MMMM DD, YYYY'}}</time></p>
        </aside>

      </header>
      
      {{#if image}}
        <figure class="post-image">
          {{image}}
        </figure>
      {{/if}}

      <section class="post-content">
        {{content words="100"}} <a href="{{url}}" class="read-more">Read More Â»</a>
      </section>

    </article>

  {{/foreach}}
  
  {{pagination}}
  
</main>